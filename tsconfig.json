{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./lib/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "rootDir": "./src/",
    "paths": {
      "@users": ["users/*"]
    },
    "declaration": true
  },
  "ts-node": { "transpileOnly": true },
  "exclude": ["jest.config.ts", "./jest/*"]
}
